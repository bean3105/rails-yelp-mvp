<h2>New Review</h2>
<h5><em><%= @restaurant.name %></em></h5>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5]%>

  <%= f.submit "Submit Review", class: "btn btn-success"%>
<% end %>
<p></p>
<p><%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant)%></p>
